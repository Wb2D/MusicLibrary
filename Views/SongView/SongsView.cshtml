@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        div {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center; /* Центрирование текста */
        }

        nav {
            margin-top: 20px;
        }

            nav ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: space-around;
                background-color: #007bff; /* Цвет фона для выделения */
                border-radius: 5px;
            }

            nav li {
                display: inline;
                margin: 0;
                padding: 10px;
            }

            nav a {
                color: #fff; /* Цвет текста */
                text-decoration: none;
            }

                nav a:hover {
                    text-decoration: underline;
                }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table,
        th,
        td {
            border: 1px solid #ddd;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
        /* Стили для кнопки */
        .add-button {
            display: inline-block;
            background-color: #4CAF50; /* Зеленый цвет */
            color: white;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            border-radius: 50%; /* Круглая форма */
            width: 40px;
            height: 40px;
            line-height: 40px;
            position: fixed;
            bottom: 20px;
            right: 20px;
            cursor: pointer;
        }
        /* Стили для кнопки удаления */
        .delete-button {
            display: inline-block;
            background-color: #FF6347; /* Красный цвет */
            color: white;
            text-align: center;
            text-decoration: none;
            font-size: 12px;
            border-radius: 5px;
            padding: 6px 10px;
            margin-left: 5px;
            cursor: pointer;
        }

            .delete-button:hover {
                background-color: #FF0000; /* Темно-красный при наведении */
            }
    </style>
</head>

<body>
    <div>
        <h2>Music Library</h2>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index")">Home</a></li>
                <li><a href="@Url.Action("GroupsView")">Groups</a></li>
                <li><a href="@Url.Action("SongsView")">Songs</a></li>
                <li><a href="@Url.Action("GenresView")">Genres</a></li>
                <li><a href="@Url.Action("JournalView")">Journal</a></li>
                <li><a href="@Url.Action("ClientsView")">Clients</a></li>
            </ul>
        </nav>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Group</th>
                    <th>Duration</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in ViewBag.Songs)
                {
                    <tr>
                        <td><a href="@Url.Action("SongView", new { id = obj.Song.Id })">@obj.Song.Name</a></td>
                        <td>@obj.GroupName</td>
                        <td>@obj.Song.Duration</td>
                        <td><a href="@Url.Action("DeleteSong", new { id = obj.Song.Id })" class="delete-button">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("AddSong")" class="add-button">+</a>
    </div>
</body>

</html>
